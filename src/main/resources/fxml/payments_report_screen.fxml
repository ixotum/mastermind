<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="code.ui.payment_report.PaymentReportController">
    <children>
        <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="columnDate" prefWidth="75.0" text="Date" />
                <TableColumn fx:id="columnId" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="columnName" prefWidth="75.0" text="Name" />
                <TableColumn fx:id="columnPayment" prefWidth="75.0" text="Payment" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <VBox>
            <children>
                <HBox>
                    <children>
                        <RadioButton fx:id="radioPeriod" mnemonicParsing="false" selected="true" text="Filter by period">
                            <toggleGroup>
                                <ToggleGroup fx:id="dateToggleGroup" />
                            </toggleGroup>
                        </RadioButton>
                        <ComboBox fx:id="comboPeriod" prefWidth="150.0">
                            <HBox.margin>
                                <Insets left="12.0" />
                            </HBox.margin>
                        </ComboBox>
                        <Label text="All Payments:">
                            <HBox.margin>
                                <Insets left="25.0" top="4.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="labelAllPayments" text="0.0">
                            <HBox.margin>
                                <Insets left="4.0" top="4.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets left="12.0" top="12.0" />
                    </VBox.margin>
                </HBox>
                <HBox>
                    <children>
                        <RadioButton fx:id="radioDate" mnemonicParsing="false" text="Filter by dates" toggleGroup="$dateToggleGroup" />
                        <AnchorPane fx:id="anchorDates">
                            <HBox.margin>
                                <Insets left="12.0" />
                            </HBox.margin>
                            <children>
                                <Label text="From:" AnchorPane.topAnchor="4.0" />
                                <DatePicker fx:id="datePickerFrom" editable="false" prefWidth="150.0" AnchorPane.leftAnchor="50.0" />
                                <Label text="To:" AnchorPane.leftAnchor="220.0" AnchorPane.topAnchor="4.0" />
                                <DatePicker fx:id="datePickerTo" editable="false" prefWidth="150.0" AnchorPane.leftAnchor="250.0" />
                            </children>
                        </AnchorPane>
                    </children>
                    <VBox.margin>
                        <Insets bottom="12.0" left="12.0" top="12.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
