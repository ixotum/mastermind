                    </children>
                    <VBox.margin>
                        <Insets top="12.0" />
                    </VBox.margin>
                </AnchorPane>
                <HBox alignment="TOP_RIGHT">
                    <children>
                        <Button cancelButton="true" defaultButton="true" mnemonicParsing="false" onAction="#onClickOKButton" prefWidth="64.0" text="OK" />
                    </children>
                    <VBox.margin>
                        <Insets right="12.0" top="12.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
