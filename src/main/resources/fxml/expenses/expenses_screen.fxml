                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </content>
        </ScrollPane>
        <VBox prefHeight="100.0">
            <children>
                <AnchorPane>
                    <children>
